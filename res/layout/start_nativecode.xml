<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="6dp"
            >


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">


            <Button
                    android:id="@+id/btn_start_filehandling"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:text="@string/btn_start_filehandling"
                    />

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">

            <Button android:id="@+id/btn_start_network"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/btn_start_usenetwork"/>

            <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    />
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">


            <Button
                    android:id="@+id/btn_start_recordaudio"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/btn_start_recordaudio"
                    />
            <View
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    />
        </LinearLayout>


        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">

            <Button android:id="@+id/btn_start_message"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/btn_start_message"/>
            <View android:layout_width="0dp"
                  android:layout_height="fill_parent"
                  android:layout_weight="0.5"/>

        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">

            <View android:layout_width="0dp"
                  android:layout_height="fill_parent"
                  android:layout_weight="0.5"/>

            <Button android:id="@+id/btn_start_packagemanager"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/btn_start_packagemanager"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">
            <View android:layout_width="0dp"
                  android:layout_height="fill_parent"
                  android:layout_weight="0.5"/>
            <View android:layout_width="0dp"
                  android:layout_height="fill_parent"
                  android:layout_weight="0.5"/>
        </LinearLayout>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:weightSum="1">

            <Button android:id="@+id/btn_start_runcommand"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="0.5"
                    android:text="@string/btn_start_runcommand"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>