<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:padding="5dp"
        >

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            >
        <WebView
                android:layout_weight="1"
                android:id="@+id/wv_webview"
                android:layout_width="fill_parent"
                android:layout_height="200dp"
                android:scrollbars="none"/>
        <Button
                android:id="@+id/btn_changepage"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="@string/btn_changepage"
                />


        <Button
                android:id="@+id/btn_getwebsettings"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="@string/btn_getwebsettings"
                />

        <Button
                android:id="@+id/btn_setuseragent"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:text="@string/btn_setuseragent"
                />

        <Button
                android:id="@+id/btn_useinetaddress"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="@string/btn_useinetaddress"
                />
    </LinearLayout>


</ScrollView>

